package com.tanaya.flightreservation.repos;

import java.util.Date;

import org.springframework.data.jpa.repository.JpaRepository;

import com.tanaya.flightreservation.entities.Flight;

public interface FlightRepository extends JpaRepository<Flight, Long>{

	@Query("from Flight where departureCity:=departureCity and arrivalCity:=arrivalCity and dateOfDeparture:=dateOfDeparture")
	List<Flight> findFlights(@Param("departureCity") String from, @Param("arrivalCity")String to, @Param("departureCity")Date departureDate);

}
